  function getCat(){
      alert('category')
		let category= $('#category').val()
			$.ajax({
				url:'/admin/get-sub-category',
				data:{category},
				method:'post',
				success:(data)=>{
                    alert(data)
					$('#subcategory').find('option').remove()
					
					for(i=0;i<data.length;i++){
						
						$('#subcategory').append('<option>'+data[i].name+'</option>')
					}
				}
			})
		}
</script>



